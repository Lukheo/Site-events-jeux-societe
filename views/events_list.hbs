<div class="container-fluid">
    <div class="row">
        <h2 class="dynapuff">Liste des évènements</h2>
    </div>
    <div class="row">
        {{#each events}}
        <div class="col-sm-10 col-md-6 col-lg-4">

            <div class="card border-success mt-3">
                <small>
                    <div class="rounded-pill badge text-bg-success float-end">
                        <i class="bi bi-dice-2"></i>
                        <span>Catégorie</span>
                    </div>
                </small>
                <small>
                    <div class="rounded-pill badge text-bg-warning float-end">
                        <i class="bi bi-geo-alt"></i>
                        <span>Room</span>
                    </div>
                </small>
                <div class="card-body border-success">
                    <h5 class="card-title dynapuff"><i class="bi bi-dice-2"></i> {{name}} <i class="bi bi-dice-2"></i>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary dynapuff"><i class="bi bi-calendar-date"></i> le
                        {{event_date}} <br> à {{event_time}}</h6>
                    <p class="card-text text-truncate">{{description}}</p>
                    <p class="card-text">{{players_number}}</p>
                    <a href="/event/read/{{id}}" class="card-link btn rounded-pill btn-success m-1">S'inscrire à
                        l'évènement</a>

                    {{#if @root.isAdmin}} 

                    <a href="/event/update/{{id}}" class="btn rounded-pill btn-warning m-1"> modifier l'event</a>
                    <button type="button" class="btn rounded-pill btn-danger m-1" data-bs-toggle="modal"
                        data-bs-target="#Modal{{id}}"> Supprimer l'évènement</button>

                    {{/if}}

                    {{!-- integration du jeu et sa page ou sa modale --}}
                    <br><a href="#" class="card-link">Jeu joué</a>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="Modal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                            Close</button>
                    </div>
                    <div class="modal-body">
                        Êtes vous sur de supprimer votre évèvement <em> {{name}}</em></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <form action="/event/delete/{{id}}" method="post">
                            <button type="submit" class="btn btn-danger">Supprimer définitivement</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>