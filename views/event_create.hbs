<h1 class="dynapuff text-center">Créer un évènement</h1>

<div class="container mt-5">
    <form action="/create_event" method="POST">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label for="eventName" class="mb-2 fs-4">Nom de l'événement</label>
                    <input type="text" id="eventName" name="eventName" class="form-control border-warning-subtle">
                </div>
            </div>

        </div>

        <div class="form-group mt-4">
            <label for="eventDescription" class="mb-2 fs-4">Description de l'événement</label>
            <textarea id="eventDescription" name="eventDescription" class="form-control border-warning-subtle" rows="4"></textarea>
        </div>
                <div class="row">
                    <div class="form-group col-6 mt-4">
                        <label for="eventDate" class="mb-2 fs-4"> <i class="bi bi-calendar m-2"></i>Date de l'événement</label>
                        <input type="date" id="eventDate" name="eventDate" class="form-control border-warning-subtle">
                    </div>
                    <div class="form-group col-6 mt-4">
                        <label for="eventHour" class="mb-2 fs-4"> <i class="bi bi-watch"></i>Heure l'événement</label>
                        <input type="text" id="eventHour" name="eventHour" class="form-control border-warning-subtle">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6 mt-4 mx-auto">
                        <label for="eventLocation" class="mb-2 fs-4"><i class="bi bi-geo-alt m-2"></i>Lieux de l'événement</label>
                        <input type="text" id="eventLocation" name="eventLocation" class="form-control border-warning-subtle">
                    </div>
                </div>
                <button type="text" class="btn btn-warning mt-4 mb-2">Créer l'événement</button>
        </form>
</div>